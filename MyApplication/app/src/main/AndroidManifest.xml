<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.niuzhaojie.myapplication">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Fresco框架加载图片 -->
        <activity
            android:name=".activity.FrescoActivity"
            android:theme="@style/Anim_fade">
            <intent-filter>
                <action android:name="nzj.......hhh" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 状态栏相关 -->
        <activity android:name=".activity.StatusBarActivity" />
        <activity android:name=".activity.SystemPluginActivity" />
        <activity android:name=".activity.ScreenActivity" />
        <activity android:name=".activity.TestListViewActivity" />
        <activity android:name=".activity.EventDistributeActivity" />
        <activity android:name=".activity.ScrollTestActivity" />
        <activity android:name=".activity.AnimatorActivity" />
        <activity android:name=".activity.ListViewAsyncActivity" />
        <activity android:name=".activity.VolleyTestActivity" />
        <activity android:name=".activity.ViewRelatedActivity" />
        <activity android:name=".activity.LoggerActivity" />
        <activity android:name=".activity.RoundImageViewActivity" />
        <activity android:name=".activity.ViewPagerActivity" />
        <activity android:name=".activity.RecycleViewActivity" />
        <activity android:name=".activity.TakePhotoActivity" />
        <activity
            android:name=".activity.SoftKeyBoardActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.BottomSheetActivity" />
        <activity android:name=".activity.DataBindingActivity" />
        <activity android:name=".activity.LevelListDtawableActivity" />
        <activity android:name=".activity.IntentRelatedActivity" />
        <activity android:name=".activity.ShareActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DataStorageRelatedActivity" />
        <activity android:name=".activity.MyCalendarActivity" />
        <activity android:name=".activity.AIDLTestActivity" />
    </application>

</manifest>